generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Market {
  id              Int       @id @default(autoincrement())
  address         String    @unique
  question        String
  description     String
  category        String
  volume          Float     @default(0)
  yesPrice        Float     @default(50)
  noPrice         Float     @default(50)
  resolutionDate  DateTime
  oracle          String
  resolved        Boolean   @default(false)
  outcome         Boolean?
  tradingFee      Float     @default(0) // Fee in basis points (100 = 1%)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  trades          Trade[]
  positions       Position[]
  priceHistory    PriceHistory[]
}

model Trade {
  id            Int       @id @default(autoincrement())
  marketId      Int
  market        Market    @relation(fields: [marketId], references: [id])
  userAddress   String
  action        String    // BUY_YES, BUY_NO, SELL_YES, SELL_NO, CLAIM
  shares        Float
  price         Float
  amount        Float
  txHash        String    @unique
  timestamp     DateTime  @default(now())
}

model Position {
  id            Int       @id @default(autoincrement())
  marketId      Int
  market        Market    @relation(fields: [marketId], references: [id])
  userAddress   String
  outcome       String    // YES or NO
  shares        Float
  avgPrice      Float
  
  @@unique([marketId, userAddress, outcome])
}

model PriceHistory {
  id            Int       @id @default(autoincrement())
  marketId      Int
  market        Market    @relation(fields: [marketId], references: [id])
  yesPrice      Float
  noPrice       Float
  timestamp     DateTime  @default(now())
}
